{
  "name": "cook-it",
  "version": "1.0.0",
  "description": "A desktop recipe management application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder build --win --linux --mac"
  },
  "dependencies": {
    "electron": "^25.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.4.0"
  },
  "build": {
    "appId": "com.yourcompany.cookit",
    "productName": "Cook-IT",
    "files": [
      "**/*",
      "!cook_it_bridge.py"
    ],
    "extraFiles": [
      "cook_it_bridge.py"
    ]
  }
}